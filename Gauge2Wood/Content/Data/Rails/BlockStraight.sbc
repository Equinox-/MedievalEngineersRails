        <Edges>
            <Edge From="0" To="1" />
        </Edges>

        <Distance Min="7" Max="15" />
        <MaxGradeRatio>0.05</MaxGradeRatio>
        <MaxAngleDegrees>20</MaxAngleDegrees>
    </Definition>

    <Definition xsi:type="MyObjectBuilder_ContainerDefinition">
        <Id Type="CubeBlock" Subtype="EquiRailGaugeStandard_Wood_Straight" />
